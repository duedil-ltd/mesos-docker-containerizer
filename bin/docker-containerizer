#!/usr/bin/env bash

set -e
cd $(dirname $(dirname "$0"))

test ! -f ./bin/environment.sh && \
  echo "Could not load ./bin/environment.sh" && \
  exit 1

source ./bin/environment.sh

PYTHONPATH="${DISTRIBUTE_EGG}:`ls ${MESOS_EGG}`:${PROTOBUF_EGG}" \
  exec python docker_containerizer.py "${@}" ${CONTAINERIZER_OPTS}
